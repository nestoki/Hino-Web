                                        <i class="fa fa-paper-plane"></i>
                                    </a>
                                    <span id="s_website_form_result"></span>
                                </div>
                            </div>
                        </form>
                    </div>
                </section>
                <div class="separacion"></div>
                <div class="solicita-inspeccion-contactanos">
                    <t t-foreach="request.env['info.contacto'].sudo().search([])" t-as="contacto"></t>
                    <h3>Contáctanos</h3>
                    <div class="informacion">
                        <t t-if="contacto">
                            <div>
                                <figure>
                                    <img src="/website_hino/static/images/iconos/icono-phone-rojo.png" alt="Icono" />
                                </figure>
                                <a class="phone" t-att-href="'tel:' + contacto.numero_phone">
                                    <t t-out="contacto.numero_phone" />
                                </a>
                            </div>
                        </t>
                        <t t-if="contacto">
                            <div>
                                <figure>
                                    <img src="/website_hino/static/images/iconos/icono-location-rojo.png" alt="Icono" />
                                </figure>
                                <p>
                                    <t t-out="contacto.direccion" />
                                </p>
                            </div>
                        </t>
                        <t t-if="contacto">
                            <div>
                                <figure>
                                    <img src="/website_hino/static/images/iconos/icono-email-rojo.png" alt="Icono" />
                                </figure>
                                <a class="email" t-att-href="'mailto:' + contacto.email">
                                    <t t-out="contacto.email" />
                                </a>
                            </div>
                        </t>
                        <t t-if="contacto">
                            <div>
                                <figure>
                                    <img src="/website_hino/static/images/iconos/icono-lnk-rojo.svg" alt="Icono" />
                                </figure>
                                <a t-att-href="contacto.linkedin" target="_blank">
                                    <p>
                                        @hinopanama
                                    </p>
                                </a>
                            </div>
                        </t>
                        <t t-if="contacto">
                            <div>
                                <figure>
                                    <img src="/website_hino/static/images/iconos/icono-ig-rojo.png" alt="Icono" />
                                </figure>
                                <a t-att-href="contacto.instagram" target="_blank">
                                    <p>
                                        @hinopanama
                                    </p>
                                </a>
                            </div>
                        </t>
                        <t t-if="contacto">
                            <div>
                                <figure>
                                    <img src="/website_hino/static/images/iconos/icono-yt-rojo.svg" alt="Icono" />
                                </figure>
                                <a t-att-href="contacto.youtube" target="_blank">
                                    <p>
                                        @hinopanama
                                    </p>
                                </a>
                            </div>
                        </t>
                        <t t-foreach="request.env['servicios.soporte'].sudo().search([])" t-as="servicio"></t>
                        <a t-att-href="'tel:' + servicio.cita_whatsapp" role="button" class="btn s_website_form_send o_default_snippet_text" data-bs-original-title="" title="">Chat en Línea
                            <figure>
                                <img src="/website_hino/static/images/iconos/icono-chat.png" alt="Icono" />
                            </figure>
                        </a>
                        <a href="/sucursales" role="button" class="btn s_website_form_send o_default_snippet_text" data-bs-original-title="" title="">Encuéntranos
                            <figure>
                                <img src="/website_hino/static/images/iconos/icono-location-rojo.png" alt="Icono" />
                            </figure>
                        </a>
                    </div>
                </div>
            </section>

